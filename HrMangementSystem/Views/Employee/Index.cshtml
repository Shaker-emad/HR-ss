@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employee List";
}

<section class="dash-container p-4">
    <div class="dash-content-emp">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-primary fw-bold">Manage Employees</h4>
            <div class="btn-group">
                <a href="#" class="btn btn-outline-primary btn-sm" title="Export">
                    <i class="fa-solid fa-file-export me-1"></i> Export
                </a>
                <a href="#" class="btn btn-outline-secondary btn-sm" title="Import">
                    <i class="fa-solid fa-file-import me-1"></i> Import
                </a>
                <a asp-action="Create" class="btn btn-outline-success btn-sm" title="Create New Employee">
                    <i class="fa-solid fa-plus me-1"></i> Create
                </a>
            </div>
        </div>

        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-0">
                <div class="dataTable-wrapper">
                    <div class="dataTable-top d-flex justify-content-between align-items-center mb-3">
                        <!-- Entries per Page Dropdown (Left) -->
                        <div class="dataTable-dropdown">
                            <label class="form-label me-2">Show</label>
                            <select class="form-select form-select-sm d-inline w-auto" id="entriesPerPage" onchange="setEntriesPerPage()">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                                <option value="25">25</option>
                            </select>
                            <label class="form-label ms-2">entries per page</label>
                        </div>

                        <!-- Search Bar (Right) -->
                        <div class="dataTable-search">
                            <input type="text" class="form-control form-control-sm" id="searchFocus" placeholder="Search by ID or First Name..." onkeyup="searchTable()" />
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-bordered align-middle" id="employeeTable">
                            <thead class="bg-light">
                                <tr>
                                    <th>Employee ID</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Position</th>
                                    <th>Salary</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>@employee.EmployeeId</td>
                                            <td>@employee.FirstName</td>
                                            <td>@employee.LastName</td>
                                            <td>@employee.Position</td>
                                            <td>@employee.Salary.ToString("C")</td>
                                            <td>@employee.Email</td>
                                            <td>@employee.Phone</td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-outline-info btn-sm" title="Edit">
                                                        <i class="fa-solid fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@employee.EmployeeId" data-name="@employee.FirstName @employee.LastName" title="Delete">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">No employees found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="employeeName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="deleteEmployeeId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var employeeId = button.data('id'); // Extract employee ID
            var employeeName = button.data('name'); // Extract employee Name

            // Set employee name in modal
            $('#employeeName').text(employeeName);
            // Set employee ID in hidden form input
            $('#deleteEmployeeId').val(employeeId);
        });

        function searchTable() {
            let input = document.getElementById('searchFocus');
            let filter = input.value.toUpperCase();
            let table = document.getElementById('employeeTable');
            let tr = table.getElementsByTagName('tr');

            for (let i = 1; i < tr.length; i++) { // Start from 1 to skip the header row
                let tds = tr[i].getElementsByTagName("td");
                let found = false;

                // Check Employee ID (td[0]) and First Name (td[1])
                if (tds.length > 0) {
                    let employeeId = tds[0].textContent || tds[0].innerText;
                    let firstName = tds[1].textContent || tds[1].innerText;

                    if (employeeId.toUpperCase().indexOf(filter) > -1 || firstName.toUpperCase().indexOf(filter) > -1) {
                        found = true;
                    }
                }
                tr[i].style.display = found ? "" : "none"; // Show or hide row based on match
            }
        }

        function setEntriesPerPage() {
            let entriesPerPage = document.getElementById('entriesPerPage').value;
            console.log("Entries per page set to:", entriesPerPage);
            // Logic to refresh or reload table with the selected number of entries can be implemented here.
        }
    </script>
}
