@{
    ViewData["Title"] = "Upload Document";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Upload New Document</h4>
        </div>
        <div class="card-body">
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="documentType" class="form-label">Document Type</label>
                    <input type="text" class="form-control" name="documentType" placeholder="Enter document type (e.g., CV, Certificate)" required />
                </div>
                <div class="form-group mb-3">
                    <label for="file" class="form-label">Select File</label>
                    <input type="file" class="form-control" name="file" required />
                </div>
                <button type="submit" class="btn btn-success w-100 mt-3">Upload Document</button>
            </form>
        </div>
    </div>
</div>
