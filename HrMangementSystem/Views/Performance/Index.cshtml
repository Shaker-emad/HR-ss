@model IEnumerable<PerformanceProgress>

@{
    ViewData["Title"] = "Performance Progress List";
}

<section class="dash-container p-4">
    <div class="dash-content-emp">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-primary fw-bold">Manage Goal Tracking</h4>
            <div class="btn-group">
                <a asp-action="Create" class="btn btn-outline-success btn-sm" title="Create New Performance Progress">
                    <i class="fa-solid fa-plus me-1"></i> Create
                </a>
            </div>
        </div>

        <div class="card shadow-sm border-0 rounded-3 mt-4">
            <div class="card-body p-0">
                <div class="dataTable-wrapper">
                    <div class="dataTable-top d-flex justify-content-between align-items-center mb-3">
                        <div class="dataTable-dropdown">
                            <label class="form-label me-2">Show</label>
                            <select class="form-select form-select-sm d-inline w-auto" id="entriesPerPage" onchange="setEntriesPerPage()">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                                <option value="25">25</option>
                            </select>
                            <label class="form-label ms-2">entries per page</label>
                        </div>

                        <div class="dataTable-search">
                            <input type="text" class="form-control form-control-sm" id="searchFocus" placeholder="Search Full Name..." onkeyup="searchTable()" />
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-bordered align-middle" id="attendanceTable">
                            <thead class="bg-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().Employee.FullName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Objective.ObjectiveDescription)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProgressDescription)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProgressDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Progress)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var progress in Model)
                                    {
                                        <tr>
                                            <td>@progress.Employee.FullName</td>
                                            <td>@progress.Objective.ObjectiveDescription</td>
                                            <td>@progress.ProgressDescription</td>
                                            <td>@progress.ProgressDate.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <div class="progress-container">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar"
                                                             style="width:@progress.Progress%"
                                                             aria-valuenow="@progress.Progress"
                                                             aria-valuemin="0"
                                                             aria-valuemax="100">
                                                            @progress.Progress%
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@progress.Status</td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a asp-action="Edit" asp-route-id="@progress.ProgressID" class="btn btn-outline-info btn-sm" title="Edit">
                                                        <i class="fa-solid fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@progress.ProgressID" title="Delete">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No performance progress records found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Performance Progress Record</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this performance progress record?</p>
                    <input type="hidden" id="deleteProgressId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button  type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap modal with dynamic data
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var progressId = button.data('id'); // Extract progress ID

            // Set progress ID in hidden form input
            $('#deleteProgressId').val(progressId);
        });

        // Search Functionality
        function searchTable() {
            let input = document.getElementById('searchFocus');
            let filter = input.value.toUpperCase();
            let table = document.getElementById('attendanceTable');
            let tr = table.getElementsByTagName('tr');

            for (let i = 1; i < tr.length; i++) { // Start from 1 to skip the header row
                let td = tr[i].getElementsByTagName("td")[0]; // Only search in the first column (Full Name)
                if (td) {
                    let employeeName = td.textContent || td.innerText;
                    tr[i].style.display = employeeName.toUpperCase().indexOf(filter) > -1 ? "" : "none";
                }
            }
        }
    </script>
}
