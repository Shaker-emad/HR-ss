@model HrMangementSystem.Models.PerformanceProgress

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Performance Progress</title>
    <!-- Adding Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* General page styling */
        .dash-container {
            padding: 20px;
        }

        .card {
            border-radius: 15px;
            margin-top: 20px;
        }

        .card-header {
            background: linear-gradient(45deg, #4e73df, #224abe);
            border-radius: 15px 15px 0 0;
            color: white;
            padding: 15px;
        }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 10px;
        }

        .form-control {
            border-radius: 50px;
            padding: 10px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 50px;
            font-size: 16px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
</head>
<body>

    <section class="dash-container">
        <div class="dash-content">
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="page-header-title">
                                <h4 class="text-primary font-weight-bold"><i class="fas fa-plus"></i> Create New Performance Progress</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-header bg-gradient-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-info-circle"></i> Performance Progress Details</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="Create" method="post">
                                <div class="form-group">
                                    <label asp-for="EmployeeId" class="form-label required">Employee</label>
                                    <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeID" required>
                                        <option value="">-- Select Employee --</option>
                                    </select>
                                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                </div>

                                <div class="form-group mt-3">
                                    <label asp-for="ObjectiveID" class="form-label required">Objective</label>
                                    <select asp-for="ObjectiveID" class="form-select" asp-items="ViewBag.ObjectiveID" required>
                                        <option value="">-- Select Objective --</option>
                                    </select>
                                    <span asp-validation-for="ObjectiveID" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ProgressDescription" class="form-label">Progress Description</label>
                                    <textarea asp-for="ProgressDescription" class="form-control" required></textarea>
                                    <span asp-validation-for="ProgressDescription" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ProgressDate" class="form-label">Progress Date</label>
                                    <input asp-for="ProgressDate" class="form-control" type="date" required />
                                    <span asp-validation-for="ProgressDate" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Progress" class="form-label">Progress (%)</label>
                                    <input asp-for="Progress" class="form-control" type="number" min="0" max="100" required />
                                    <span asp-validation-for="Progress" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-select" required>
                                        <option value="Not Started">Not Started</option>
                                        <option value="In Progress">In Progress</option>
                                        <option value="Completed">Completed</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success">Create</button>
                                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
