@model PerformanceProgress

@{
    ViewData["Title"] = "Delete Performance Progress";
}

<section class="dash-container">
    <div class="dash-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="page-header-title">
                            <h4>Delete Performance Progress</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <div class="table-responsive">
                            <h5>Are you sure you want to delete this record?</h5>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Employee</th>
                                    <td>@($"{Model.Employee.FirstName} {Model.Employee.LastName}")</td>
                                </tr>
                                <tr>
                                    <th>Objective</th>
                                    <td>@Model.Objective.ObjectiveDescription</td>
                                </tr>
                                <tr>
                                    <th>Progress</th>
                                    <td>@Model.Progress%</td>
                                </tr>
                                <tr>
                                    <th>Progress Date</th>
                                    <td>@Model.ProgressDate.ToShortDateString()</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>@Model.Status</td>
                                </tr>
                                <tr>
                                    <th>Progress Description</th>
                                    <td>@Model.ProgressDescription</td>
                                </tr>
                            </table>

                            <form asp-action="DeleteConfirmed" method="post" class="mt-3">
                                <input type="hidden" asp-for="ProgressID" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>