    <div class="dash-content-emp">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-primary fw-bold">Manage Timesheet</h4>
            <div class="btn-group">
                <a href="#" class="btn btn-outline-primary btn-sm" title="Export">
                    <i class="fa-solid fa-file-export me-1"></i> Export
                </a>
                <a href="#" class="btn btn-outline-secondary btn-sm" title="Import">
                    <i class="fa-solid fa-file-import me-1"></i> Import
                </a>
                <a asp-action="Create" class="btn btn-outline-success btn-sm" title="Create New Attendance">
                    <i class="fa-solid fa-plus me-1"></i> Create
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="mt-2">
                    <div class="card">
                        <div class="card-body">
                            <!-- Uncomment and implement filtering if needed -->
                            @* <form asp-action="Filter" method="post" class="form-inline d-flex justify-content-start align-items-center gap-2">
                            <div class="form-group">
                            <label asp-for="FilterModel.StartDate" class="sr-only">Start Date</label>
                            <input asp-for="FilterModel.StartDate" class="form-control" placeholder="Start Date" type="date" />
                            </div>
                            <div class="form-group">
                            <label asp-for="FilterModel.EndDate" class="sr-only">End Date</label>
                            <input asp-for="FilterModel.EndDate" class="form-control" placeholder="End Date" type="date" />
                            </div>
                            <div class="form-group">
                            <label asp-for="FilterModel.EmployeeID" class="sr-only">Employee</label>
                            <select asp-for="FilterModel.EmployeeID" class="form-control" asp-items="Model.FilterModel.Employees">
                            <option value="">All Employees</option>
                            </select>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="fa-solid fa-search"></i></button>
                            <button type="reset" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                            </form> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 rounded-3 mt-4">
            <div class="card-body p-0">
                <div class="dataTable-wrapper">
                    <div class="dataTable-top d-flex justify-content-between align-items-center mb-3">
                        <!-- Entries per Page Dropdown (Left) -->
                        <div class="dataTable-dropdown">
                            <label class="form-label me-2">Show</label>
                            <select class="form-select form-select-sm d-inline w-auto" id="entriesPerPage" onchange="setEntriesPerPage()">
                                <option value="5">5</option>
                                <option value="10" selected>10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                                <option value="25">25</option>
                            </select>
                            <label class="form-label ms-2">entries per page</label>
                        </div>

                        <!-- Search Bar (Right) -->
                        <div class="dataTable-search">
                            <input type="text" class="form-control form-control-sm" id="searchFocus" placeholder="Search..." onkeyup="searchTable()" />
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-bordered align-middle" id="attendanceTable">
                            <thead class="bg-light">
                                <tr>
                                    <th>Attendance ID</th>
                                    <th>Employee ID</th>
                                    <th>Employee Name</th>
                                    <th>Date</th>
                                    <th>Check-In Time</th>
                                    <th>Check-Out Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var attendance in Model)
                                    {
                                        <tr>
                                            <td>@attendance.AttendanceID</td>
                                            <td>@attendance.Employee.EmployeeId</td>
                                            <td>@attendance.Employee.FirstName @attendance.Employee.LastName</td>
                                            <td>@attendance.Date.ToString("yyyy-MM-dd")</td>
                                            <td>@attendance.CheckInTime.ToString("HH:mm")</td>
                                            <td>@attendance.CheckOutTime.ToString("HH:mm")</td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a asp-action="Edit" asp-route-id="@attendance.AttendanceID" class="btn btn-outline-info btn-sm" title="Edit">
                                                        <i class="fa-solid fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@attendance.AttendanceID" title="Delete">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No attendance records found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Attendance Record</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this attendance record?</p>
                    <input type="hidden" id="deleteAttendanceId" name="AttendanceID" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap modal with dynamic data
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var attendanceId = button.data('id'); // Extract attendance ID

            // Set attendance ID in hidden form input
            $('#deleteAttendanceId').val(attendanceId);
        });

        // Search Functionality
        function searchTable() {
            let input = document.getElementById('searchFocus');
            let filter = input.value.toUpperCase();
            let table = document.getElementById('attendanceTable');
            let tr = table.getElementsByTagName('tr');

            for (let i = 1; i < tr.length; i++) { // Start from 1 to skip the header row
                let tds = tr[i].getElementsByTagName("td");
                let found = false;

                // Check Employee ID (td[1]) and Employee Name (td[2])
                if (tds.length > 0) {
                    let employeeId = tds[1].textContent || tds[1].innerText;
                    let employeeName = tds[2].textContent || tds[2].innerText;

                    if (employeeId.toUpperCase().indexOf(filter) > -1 || employeeName.toUpperCase().indexOf(filter) > -1) {
                        found = true;
                    }
                }
                tr[i].style.display = found ? "" : "none"; // Show or hide row based on match
            }
        }

        // Entries Per Page Functionality (Optional)
        function setEntriesPerPage() {
            let entriesPerPage = document.getElementById('entriesPerPage').value;
            console.log("Entries per page set to:", entriesPerPage);
            // Implement pagination logic here if needed
        }
    </script>
}