@model HrManagementSystem.Models.Attendance

@{
    ViewData["Title"] = "Delete Attendance";
}

<section class="dash-container">
    <div class="dash-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="page-header-title">
                            <h4>Delete Attendance</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <div class="table-responsive">
                            <h5>Are you sure you want to delete this employee?</h5>
                            <dl class="row">
                                <dt class="col-sm-3">Employee</dt>
                                <dd class="col-sm-9">@Model.Employee.FirstName @Model.Employee.LastName</dd>

                                <dt class="col-sm-3">Date</dt>
                                <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

                                <dt class="col-sm-3">Check-In Time</dt>
                                <dd class="col-sm-9">@Model.CheckInTime.ToShortTimeString()</dd>

                                <dt class="col-sm-3">Check-Out Time</dt>
                                <dd class="col-sm-9">@Model.CheckOutTime.ToShortTimeString()</dd>
                            </dl>

                            <form asp-action="DeleteConfirmed" method="post">
                                <input type="hidden" asp-for="AttendanceID" />

                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
