@model IEnumerable<HrMangementSystem.Models.Staff>

<div class="container">
    <main role="main" class="pb-3">
        <link rel="stylesheet" href="/css/staff.css?v=FIKvJUkGdCYVyK_BZUT-6C6Q0iYPG9aPNdoIsVgE860">

        <div class="dash-content-staff">
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="page-header-title">
                                <h4 class="m-b-10">Manage Users</h4>
                            </div>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                                <li class="breadcrumb-item">Users</li>
                            </ul>
                        </div>
                        <div class="col">
                            <div class="float-end">
                                <a href="/Staff/Create" class="btn btn-success btn-sm d-flex align-items-center" title="Create New User">
                                    <i class="ti ti-plus"></i>
                                    <span class="ms-1">New</span>
                                </a>
                                <div class="dropdown d-inline ms-2">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="ti ti-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" href="#" data-url="/SomeOtherAction">Some Other Action</a></li>
                                        <!-- Add more actions as needed -->
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var staff in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="staff-card text-center">
                            <div class="card-header border-0 pb-0 d-flex justify-content-between align-items-start">
                                <div></div>
                                <div class="card-header-right">
                                    <div class="btn-group card-option">
                                        <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="ti ti-dots-vertical"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a href="@Url.Action("Edit", "Staff", new { id = staff.StaffId })" data-ajax-popup="true" data-title="Update User" class="dropdown-item">
                                                <i class="ti ti-edit"></i><span class="ms-2">Edit</span>
                                            </a>
                                            <a href="#" class="dropdown-item bs-pass-para" data-confirm="Are you sure?" data-text="This action cannot be undone. Do you want to continue?" data-confirm-yes="delete-form-@staff.StaffId">
                                                <i class="ti ti-trash"></i><span class="ms-2">Delete</span>
                                            </a>
                                            <form method="POST" action="/Staff/Delete/@staff.StaffId" id="delete-form-@staff.StaffId">
                                                <input name="_method" type="hidden" value="DELETE">
                                                <input name="__RequestVerificationToken" type="hidden" value="@Html.AntiForgeryToken().ToString()">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="avatar">
                                    <a href="@Url.Content($"~/Images/{staff.ImageFile}")" target="_blank">
                                        <img src="@Url.Content($"~/Images/{staff.ImageFile}")" class="rounded-circle" style="width: 30%;">
                                    </a>
                                </div>
                                <h4 class="mt-2 text-primary">@staff.FirstName @staff.LastName</h4>
                                <div class="role-text">
                                    <small class="text-muted">@staff.Role</small>
                                </div>
                                <small>@staff.Email</small>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-lg-3 col-md-6">
                    <div class="card text-center shadow-sm new-user-card">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <a href="/Staff/Create" class="text-decoration-none text-primary">
                                <div class="new-user-icon mb-2">
                                    <i class="fas fa-plus-circle fa-2x"></i>
                                </div>
                                <h4 class="text-primary">New User</h4>
                                <small>Click here to add a new user</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
